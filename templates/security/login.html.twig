        <div class="fordableCard_content">
            <form method="post" id="loginForm">

                {# Affichage d'une erreur si l'email ou le mot de passe est √©rron√© #}
                {% if error %}
                    <script>
                        $(document).ready(function() {
                            $('#errorModal').modal('show');
                        });
                    </script>
                {% endif %}

                {# Affichage si l'utilisateur est d√©j√† connect√© #}
